        <div class="single_fliter width_one">
          <p>Filter by:</p>
          <%= render "filter_by" %>
        </div>

        <div class="single_fliter width_two">
          <p>Sort by:</p>
          <%= render "sort_by" %>
        </div>

        <div class="single_fliter width_five">
          <%= render "new_request" %>
        </div>

      </div>         
    </div>
  </div>

  <div class="row product_margin_top Explore">

    <%= render "products/explore_product", products: @products %>

  </div>

</div><!-- Explore page end -->

