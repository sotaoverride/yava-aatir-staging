<%= title 'Sign Up - Application Submitted' %>
<section class="box-section">
  <div class="row expanded floating-box finish">
    <div class="columns text-center">
      <div class="check-circle">
        <span class="icon-big-check"></span>
      </div>
      <h1>Successfully Completed!</h1>
      <h3>Your application has been received. We will be in touch with you very soon. </h3>

      <button data-open="invite-friends" type="button" class="button">Invite My Friends to Join</button>
    </div>						
  </div>
</section>
<div class="reveal" id="invite-friends" data-reveal data-close-on-click="true" data-animation-in="fade-in" data-animation-out="fade-out">
  <div id="step-one">
    <h3>Invite Friends</h3>
    <div class="row">
      <form>
        <div id="invite">
          <div class="row">
            <div class="small-6 columns">
              <label>Email Address
                <input type="text">
              </label>
            </div>
            <div class="small-6 columns">
              <label>Phone Number
                <input type="text">
              </label>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="row">
      <div class="columns add">
        <button type="button">Add New Friend</button>
      </div>
    </div>
    <button type="button" class="button next float-right">SEND</button>

    <button class="close-button" data-close aria-label="Close reveal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>        
  </div>
  <div id="step-two" class="text-center">
    <div class="check-circle">
      <span class="icon-big-check"></span>
    </div>        
    <h3>Invitation Sent!</h3>
    <p>We have sent your invitations to your colleagues</p>
    <%= link_to 'CLOSE', wizards_path(step: 6), method: :patch, class: 'button' %>
  </div>
</div>
