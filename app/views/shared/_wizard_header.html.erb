<div class="top-bar top-bar_flex">
  <!-- Center Logo -->
  <div class="center_logo single_flex">
    <%= link_to destroy_user_session_path, method: :delete do %>
      <%= image_tag 'logo.png' %>
    <% end %>
  </div>

  <div class="top-bar-center  single_flex">
    <div class="button-group"> 
      <% step = params[:step] ? params[:step].to_i : current_user.reload.profile.current_step_index %>
      <a href='<%= wizards_path(step: 0) %>' class="button <%= step >= 0 ? 'active' : 'disabled wizard-link' %>">CHOOSE PROFILE</a> 
      <a href='<%= wizards_path(step: 1) %>' class="button <%= step >= 1 ? 'active' : 'disabled wizard-link' %>">SELECT CATEGORIES</a> 
      <a href='<%= wizards_path(step: 4) %>' class="button <%= step >= 4 ? 'active' : 'disabled wizard-link' %>">REGISTER</a> 
      <a href='<%= wizards_path(step: 5) %>' class="button <%= step >= 5 ? 'active' : 'disabled wizard-link' %>">COMPLETE</a> 
    </div>
  </div>

  <div class="home_right_acc_info  single_flex sing_icon_width">
    <div class="top-bar-right">
      <%= link_to 'Sign In', destroy_user_session_path, method: :delete, class: 'button login' %>
    </div>
  </div> 
</div>